generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  client
  staff
  admin
}

model user {
  id                  String            @id @default(uuid())
  fullName            String
  email               String            @unique
  password            String
  role                Role              @default(client)
  phoneNumber         String
  resetPasswordToken  String?
  resetPasswordExpire DateTime?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  profile             profile?
  joinedAt            DateTime          @default(now())
  memberships         membership[]
  classAttendances    classAttendance[]
  gymClasses          gymClass[]
  gymAttendances      gymAttendance[]
}

model profile {
  profileUrl String
  profileId  String
  user       user   @relation(fields: [userId], references: [id])
  userId     String @unique
}

model plan {
  id             String       @id @default(uuid())
  name           String
  description    String?
  price          Float
  durationInDays Int
  memberships    membership[]
}

model membership {
  id             String          @id @default(uuid())
  user           user            @relation(fields: [userId], references: [id])
  userId         String
  plan           plan            @relation(fields: [planId], references: [id])
  planId         String
  startDate      DateTime        @default(now())
  endDate        DateTime
  payments       payment[]
  gymAttendances gymAttendance[]
}

model payment {
  id           String     @id @default(uuid())
  membership   membership @relation(fields: [membershipId], references: [id])
  membershipId String
  amount       Float
  paymentDate  DateTime   @default(now())
  method       String // "Cash", "Card", "Online"
}

model gymClass {
  id              String            @id @default(uuid())
  name            String
  schedule        DateTime
  capacity        Int
  classAttendance classAttendance[]
  user            user              @relation(fields: [userId], references: [id])
  userId          String
}

model classAttendance {
  id         String   @id @default(uuid())
  user       user     @relation(fields: [userId], references: [id])
  userId     String
  gymClass   gymClass @relation(fields: [gymClassId], references: [id])
  gymClassId String
  attendedAt DateTime @default(now())
}

model gymAttendance {
  id           String     @id @default(uuid())
  user         user       @relation(fields: [userId], references: [id])
  userId       String
  membership   membership @relation(fields: [membershipId], references: [id])
  membershipId String
  checkIn      DateTime   @default(now())
  checkOut     DateTime?
}
